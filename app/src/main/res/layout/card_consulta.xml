<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardConsulta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#FFF3E0"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jogo_item_nomeDoOrganizador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/jogo_item_numeroParaContato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/jogo_item_nomeDoOrganizador"
            app:layout_constraintStart_toStartOf="@id/jogo_item_nomeDoOrganizador"
            app:layout_constraintTop_toBottomOf="@id/jogo_item_nomeDoOrganizador"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/jogo_item_diaDoJogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/jogo_item_nomeDoOrganizador"
            app:layout_constraintStart_toStartOf="@id/jogo_item_nomeDoOrganizador"
            app:layout_constraintTop_toBottomOf="@id/jogo_item_numeroParaContato"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/jogo_item_valorParaPagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#06B80F"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/jogo_item_nomeDoOrganizador"
            app:layout_constraintStart_toStartOf="@id/jogo_item_nomeDoOrganizador"
            app:layout_constraintTop_toBottomOf="@id/jogo_item_diaDoJogo"
            tools:text="R$ 19,00" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>